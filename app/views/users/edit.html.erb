<div class="container">
  <div class="row">

  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info</h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></br>
  <br>
  <label for="inputImage">Image</label><br>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></br>
<br>
<label for="inputIntroduntion">Introduction</label></br>
  <%= f.text_area :introduction, autofocus: true, id:"inputIntroduntion" %></br>
<br>

<div class="form-group">
  <input type="submit" name="commit" value="Update User" class="btn btn-secondary">
</div>
<% end %>
    </div>
  </div>
</div>




