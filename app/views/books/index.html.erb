<div class="container">
  <div class="row">
   <div class="col-md-3" style="background-color: orange;">

     <H2>User info</H2>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></br>
      <table class="table" >
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
       <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
  </table>

        <%= link_to("/users/#{@user.id}/edit") do %>
        <span class="btn btn-outline-secondary btn-block fas fa-user-cog"></span>
        <% end %>


<h2 class="mt-3">New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |book| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4><%=f.text_field :title %>
  <h4>Opnion</h4><%= f.text_area :body %>
<br>
  <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
<% end %>
   </div>
   </table>
<div class="col-md-8 offset-md-1">
<H1>Books</H1>
<table class="table table-hover table-inverse">


  <thead>
    <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody><% @books.each do |book| %>
    <tr>
    <td>
      <%= link_to "/books/#{book.id}" do %>
        <%= image_tag 'no_image.jpg' %>
      <% end %>
      </td>


    <td><%= link_to book.title, "/books/#{book.id}" %></td>
    <td><%= book.body %></td>
      </tr>
      <% end %>
  </tbody>
</table>
</div>


  </div>
</div>
