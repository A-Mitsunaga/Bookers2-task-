<!--bookの新規投稿-->
<h1>New Book</h1>
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opnion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create book' %>

<% end %>

<h1>投稿一覧</h1>
<% @books.each do |book| %>
  <p>Title</p>
  <span><%= book.title %></span>
  <p>Opinipn</p>
  <span><%= book.body %></span>
<% end %>