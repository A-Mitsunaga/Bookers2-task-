<H1>User info</H1>
<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></br>
<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
       <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
    <tr><%= link_to "here", edit_user_path(current_user)  %>
    </tr>
  </tbody>
</table>

<h1>New Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |book| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4><%=f.text_field :title %>
  <h4>Opnion</h4><%= f.text_area :body %>
<br>
  <%= f.submit 'Create book' %>
<% end %>


