<div class="container">
    <div class="row">
      <div class="col text-right px-0">
      <div class="col-lg-2" style="background-color: orange;">
        <h2>サイドバー</h2>
        <H2>User info</H2>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></br>
      <table class="table table-striped">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
       <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
    <tr><%= link_to "here", edit_user_path(current_user)  %>
    </tr>
  </tbody>
</table>
<h2>New Book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |book| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4><%=f.text_field :title %>
  <h4>Opnion</h4><%= f.text_area :body %>
<br>
  <%= f.submit 'Create book' %>
<% end %>
  </div>
</div>
</div>
</div>
</div>
<div class="col-lg-10">
<H1>Books</H1>
<table class="table table-striped">
  <thead>
    <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody><% @books.each do |book| %>
    <tr>
    <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></br></td>
    <td><%= link_to book.title, "/books/#{book.id}" %></td>
    <td><%= book.body %></td>
      </tr>
      <% end %>
  </tbody>
</table>
</div>